<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.tutorial2</groupId>
  <artifactId>TutorialTest</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.tutorial2.runner.TestRunner</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${maven-test-plugin.version}</version>
        <configuration>
          <groups>unit</groups>
          <parallel>classes</parallel>
          <threadCount>1</threadCount>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>${maven-test-plugin.version}</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.jmockit</groupId>
      <artifactId>jmockit</artifactId>
      <version>1.21</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <annotations.version>15.0</annotations.version>
    <java.version>1.8</java.version>
    <jersey.version>2.22.2</jersey.version>
    <jmockit.version>1.21</jmockit.version>
    <maven-shade-plugin.version>2.4.3</maven-shade-plugin.version>
    <maven-compiler-plugin.version>3.5.1</maven-compiler-plugin.version>
    <jackson.version>2.7.2</jackson.version>
    <guava.version>19.0</guava.version>
    <config.version>1.3.0</config.version>
    <lombok.version>1.16.6</lombok.version>
    <assertj-core.version>3.3.0</assertj-core.version>
    <maven-test-plugin.version>2.19.1</maven-test-plugin.version>
    <testng.version>6.9.10</testng.version>
    <jcommander.version>1.48</jcommander.version>
    <logback-classic.version>1.1.5</logback-classic.version>
    <mybatis.version>3.3.1</mybatis.version>
  </properties>
</project>

